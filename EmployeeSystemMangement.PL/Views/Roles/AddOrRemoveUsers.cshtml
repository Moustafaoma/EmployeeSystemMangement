@model List<UsersInRoleViewModel> 
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@ViewBag.roleId;

<h1>AddOrRemoveUsers</h1>

<form asp-action="AddOrRemoveUsers" class="my-3" method="post">
    <input type="hidden" name="roleName" value="@TempData["RoleName"]" />

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected">
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName </label>
        </div>
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <div class="my-3"> 
        <input type="submit" value="Edit" class="btn-btn success">
        <a asp-action="Edit" asp-route-id="@ViewBag.roleId" asp-controller="Roles" class="btn btn-dark">cancel</a>
    </div>


        
    



</form>