@model IEnumerable<ApplicationRoles>

@{
    ViewData["Title"] = "Roles";
   
}
@{
    if (Model.Count()<1) {
        <div>
        <p style="color:red">Not Roles Found </p>
        </div>
        <h2>@ViewData["Title"]</h2>

        <p>
            <a class="btn btn-primary" asp-action="Create">Create New Role</a>
        </p>
    }
    else
    {
        <h2>@ViewData["Title"]</h2>

        <p>
            <a class="btn btn-primary" asp-action="Create">Create New Role</a>
        </p>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i>Details</a> |
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i>Edit</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

 






