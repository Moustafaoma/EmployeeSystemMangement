@model Department
<div class="form-group row">
    <label asp-for="Code" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="DateOfCreation" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="DateOfCreation" class="form-control" type="date" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
</div>