@model Department
@{
    ViewData["Title"] = "Edit Deprtment";
}

<h1>Edit Department</h1>
<form asp-action="Edit" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <partial name="PartialViews/FormUpdateAndCreateForDepartmentPartial"></partial>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button> |
            <a asp-action="Index" class="btn btn active"> Cancel </a>
        </div>
    </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
