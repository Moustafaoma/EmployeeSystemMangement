@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Register</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form action="Register" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input class="text w3lpass " asp-for="FirstName" placeholder="FirstName" required="">
			<input class="text w3lpass " asp-for="LastName" placeholder="LastName" required="">
			<input class="text w3lpass" asp-for="Username" placeholder="Username" required="">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmedPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Register">
		</form>
		<p>Do You have an Account? <a asp-action="LogIn"> Login Now!</a></p>
	</div>

	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
</div>
